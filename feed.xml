---
layout: null
permalink: /feed.xml
---
<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="/feed-style.xsl"?>
<rss version="2.0" xmlns:media="http://search.yahoo.com/mrss/">
  <channel>
    <title>{{ site.title | xml_escape }}</title>
    <link>{{ site.url }}</link>
    <description>{{ site.description | xml_escape }}</description>
    {% for post in site.posts limit:10 %}
    <item>
      <title>{{ post.title | xml_escape }}</title>
      <link>{{ site.url }}{{ post.url }}</link>
      <guid isPermaLink="true">{{ site.url }}{{ post.url }}</guid>
      <pubDate>{{ post.date | date_to_rfc822 }}</pubDate>
      <description><![CDATA[
        {{ post.excerpt | default: post.content | strip_html | normalize_whitespace | truncate: 240 }}
      ]]></description>
      {% if post.image %}
        <media:content url="{{ site.url }}{{ post.image }}" medium="image"/>
        <media:thumbnail url="{{ site.url }}{{ post.image }}"/>
      {% endif %}
    </item>
    {% endfor %}
  </channel>
</rss>
